{
  // Globs to lint (exclude HTML landing page and node_modules)
  "globs": [
    "**/*.md",
    "!**/node_modules/**",
    "!docs/index.html",
    // Exclude generated JSON-like task files, but keep the README
    "!docs/tasks/**/*.md",
    "docs/tasks/README.md"
  ],
  // Rule config (keep lines readable; allow inline HTML in docs when needed)
  "config": {
    "MD013": false,
    "MD033": true,
    "MD031": false,
    "MD040": false
  }
}
