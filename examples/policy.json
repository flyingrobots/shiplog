{
  "version": 1,
  "require_signed": true,
  "allow_ssh_signers_file": ".git/allowed_signers",
  "authors": {
    "default_allowlist": [
      "${DEPLOY_BOT_EMAIL:-deploy-bot@ci}",
      "${ENGINEERING_EMAIL:-engineering@example.com}"
    ],
    "env_overrides": {
      "default": [],
      "prod": []
    }
  },
  "deployment_requirements": {
    "prod": {
      "require_ticket": true,
      "require_service": true,
      "require_where": ["region", "cluster", "namespace"]
    },
    "default": {
      "require_ticket": true
    }
  },
  "ff_only": true,
  "notes_ref": "refs/shiplog/notes/logs",
  "journals_ref_prefix": "refs/shiplog/journal/",
  "anchors_ref_prefix": "refs/shiplog/anchors/"
}
