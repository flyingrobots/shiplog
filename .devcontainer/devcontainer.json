{
  "name": "Shiplog",
  "build": {
    "dockerfile": "dev.Dockerfile",
    "context": "..",
    "args": {
      "GUM_VERSION": "0.13.0"
    }
  },
  "workspaceFolder": "/workspaces/shiplog",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "timonwong.shellcheck",
        "ms-azuretools.vscode-docker",
        "EditorConfig.EditorConfig",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.insertFinalNewline": true
      }
    }
  },
  "postCreateCommand": "if [ -x bin/shiplog ]; then bin/shiplog --help >/dev/null 2>&1 || echo 'WARNING: bin/shiplog --help failed during container initialization'; fi"
}
