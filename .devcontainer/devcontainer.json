{
  "name": "Shiplog",
  "build": {
    "dockerfile": "dev.Dockerfile",
    "context": ".",
    "args": {
      "GUM_VERSION": "0.13.0",
      "YQ_VERSION": "4.44.3"
    }
  },
  "workspaceFolder": "/workspaces/shiplog",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "timonwong.shellcheck",
        "ms-azuretools.vscode-docker",
        "EditorConfig.EditorConfig",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.insertFinalNewline": true
      }
    }
  },
  "postCreateCommand": "if [ -x bin/shiplog ]; then bin/shiplog --help >/dev/null; fi"
}
